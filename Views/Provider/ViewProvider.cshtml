@model Provider

<div id="providerName"><h2>Information for provider: @Model.FirstName @Model.LastName</h2></div>
<p></p>


<style>

</style>

<form>
    <button type="submit" class="btn btn-sm"  formaction="/Provider/UpdateProvider/@Model.EmployeeID">Update this provider's information</button>
    <button type="submit" class="btn btn-sm"  formaction="/Provider/DeleteProvider/@Model.EmployeeID" 
            onclick="return confirm('Deleting a provider cannot be undone.  Are you sure you want to delete this provider?')">Delete this provider</button>
</form>

<div class="photo_container">
    <img src=@Model.PhotoPath asp-append-version="true"  class="provider_photo" alt="Photo of Provider" />
</div>

<div class="single_provider_table">
    <table class="table table-hover">
        <tr class>
            <td>Employee ID:</td>
            <td>@Model.EmployeeID</td>
        </tr>
        <tr>
            <td>First Name:</td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td>Specialties:</td>
            <td>@Model.Specialties</td>
        </tr>
        <tr>
            <td>Age:</td>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <td>Gender:</td>
            <td>@Model.Gender</td>
        </tr>
    </table>
</div>

