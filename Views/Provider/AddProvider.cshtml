@model Provider

<h3>To add a provider to the provider database, please enter the following information.  
    Note that an employee ID will be automatically generated for the provider.</h3>

@using(Html.BeginForm("AddProviderToDatabase", "Provider", "Post")) {
   @* <label asp-for="EmployeeID" class="control-label">Employee ID</label>
    <input type="number" name="EmployeeID" class="form-control" value="@Model.EmployeeID" />
    *@
    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" autofocus required name="FirstName" class="form-control" placeholder="@Model.FirstName" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" required name="LastName" class="form-control" placeholder="@Model.LastName" />

    <label asp-for="Specialties" class="control-label">Specialties</label>
    <input type="text" required name="Specialties" class="form-control" placeholder="@Model.Specialties" />

    <label asp-for="Age" class="control-label">Age</label>
    <input type="number" step="1" name="Age" class="form-control" value="@Model.Age" />

    <select  asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderCategories>()" class="control-label" name="Gender">Gender:</select>
    <br />

    <input type="submit" value="Add Provider" class="btn btn-primary" />
}
